# Auto detect text files and perform LF normalization
* text=auto

# Force line endings to LF for these files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Force binary for these files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.mp3 binary
*.wav binary
*.mp4 binary
*.webm binary
*.mov binary
*.mkv binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.7z binary

# Force Windows line endings for these files
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
